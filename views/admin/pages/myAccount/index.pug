extends ../../layouts/default.pug

block main
  .container-fluid.pt-4.px-4
    form.bg-light.rounded.h-100.p-4
      h6.mb-4 My information
      .input-group.mb-3
        span#basic-addon1.input-group-text
          i.fa-solid.fa-address-card.fa
        input.form-control(type='text' placeholder='Full Name' aria-label='Full Name' aria-describedby='basic-addon1' autocomplete='off' value=admin.fullName)
      .input-group.mb-3
        span#basic-addon1.input-group-text
          i.fa-regular.fa-envelope.fa
        input.form-control(type='text' placeholder='Email' aria-label='Email' aria-describedby='basic-addon1' autocomplete='off' value=admin.email)
      .mb-3
        label.form-label(for='formFile') Avatar
        input#formFile.form-control(type='file')
      .input-group.mb-3
        span#basic-addon1.input-group-text
          i.fa-regular.fa-phone.fa
        input.form-control(type='text' placeholder='Phone Number' aria-label='Phone Number' aria-describedby='basic-addon1' value=admin.phone)
      h6.mb-4 Change Password
      .input-group.mb-3
        span#basic-addon1.input-group-text
          i.fa-solid.fa-lock.fa
        input.form-control(type='password' placeholder='Old Password' aria-label='Old Password' aria-describedby='basic-addon1' autocomplete='off' value='')
      .input-group.mb-3
        span#basic-addon1.input-group-text
          i.fa-solid.fa-lock.fa
        input.form-control(type='password' placeholder='New Password' aria-label='New Password' aria-describedby='basic-addon1')
      .input-group.mb-3
        span#basic-addon1.input-group-text
          i.fa-solid.fa-lock.fa
        input.form-control(type='password' placeholder='Confirm New Password' aria-label='Confirm New Password' aria-describedby='basic-addon1')
      button.btn.btn-primary(type='button') Update
