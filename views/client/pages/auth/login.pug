include ../../mixins/alert.pug

doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title &Dstrok;&abreve;ng nh&#x1EAD;p
  link(rel='shortcut icon' href='/img/logo/shop.svg' type='image/x-icon')
  link(rel='stylesheet' href='/bootstrap/css/bootstrap.min.css')
  link(rel='stylesheet' href='/css/layout/style.css')
  style.
    body {
    background: linear-gradient(to bottom right, #3b5d50, #608e7c);
    background-repeat: no-repeat;
    background-size: cover;
    }
    .login-container {
    display: flex;
    justify-content: center;
    min-height: 100vh;
    align-items: center;
    }
    .login-form {
    background-color: #ffffff;
    /* text-align: center; */
    padding: 65px 55px 55px 55px;
    border-radius: 20px;
    width: 500px;
    }
    .login-form h2 {
    margin-bottom: 49px !important;
    text-align: center;
    }
    .group-input {
    margin-bottom: 20px;
    position: relative;
    }
    .form-button.disabled {
    opacity: 0.7;
    pointer-events: none;
    }
    .label {
    font-family: Nunito;
    font-size: 16px;
    font-weight: 500;
    color: #333333;
    line-height: 1.5;
    padding-left: 7px;
    padding-bottom: 5px;
    display: block;
    }
    input {
    font-family: Nunito;
    border: none;
    outline: none;
    padding: 5px;
    font-size: 16px;
    line-height: 1.2;
    width: 100%;
    height: 55px;
    background: transparent;
    padding: 0 7px 0 43px;
    border-bottom: #7f7f7f73 solid 1px;
    }
    .focus {
    position: absolute;
    display: block;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    pointer-events: none;
    }
    .focus::before {
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0%;
    height: 2px;
    background-color: #7f7f7f;
    transition: all 0.4s;
    }
    .input {
    position: relative;
    }
    .checkbox {
    display: inline !important;
    padding: 0 !important;
    width: 20px;
    height: 100%;
    }
    .group-input .img {
    width: 43px;
    height: 100%;
    position: absolute;
    top: 0%;
    left: 0px;
    display: flex;
    justify-content: center;
    opacity: 0.5;
    transition: all 0.3s ease;
    }
    input::placeholder {
    transition: all 0.3s ease;
    }
    input:focus::placeholder {
    opacity: 0;
    }
    input:focus + .focus::before {
    width: 100%;
    }
    .input:focus-within .img {
    opacity: 1;
    }
    a {
    color: #333333;
    }
    .forgot {
    text-align: right;
    }
    .signup {
    color: #333333;
    text-align: center;
    }
    .signup a {
    color: #3b5d50;
    font-weight: 700;
    display: block;
    }
    .form-button {
    text-align: center;
    padding: 20px 0;
    }
    .form-button button {
    font-size: 18px;
    font-weight: 600;
    padding: 10px 20px;
    width: 100%;
    border-radius: 30px;
    border: none;
    background-color: #388165;
    color: #ffffff;
    transition: all 0.3s ease;
    }
    .form-button button:hover {
    background-color: #53b38f;
    width: 90%;
    }
    @media screen and (max-width: 768px) {
    .login-form {
    padding: 65px 15px 55px 15px;
    margin: 0 15px;
    }
    }
    .group-input.invalid::after {
    content: attr(data-error);
    color: red;
    font-size: 12px;
    font-style: italic;
    }
+alert-success(5000)
+alert-error(5000)
.container-loader
  #loader
.limit
  .login-container
    form.login-form(action='/auth/login' method='POST' id='login-form')
      h2.section-title &Dstrok;&abreve;ng nh&#x1EAD;p
      .group-input.invalid
        span.label Email
        .input
          .img
            img(src='/img/logo/email.svg' alt='' style='width: 25px;')
          input#email(type='text' name='email' placeholder='Nhập email' required='')
          span.focus
      .group-input.invalid
        span.label Password
        .input
          .img
            img(src='/img/logo/password.svg' alt='' style='width: 25px;')
          input#password(type='password' placeholder='Nhập mật khẩu' required='' name='password')
          span.focus
      .group-input.invalid
        p
          input#rememberMe.checkbox(value='true' type='checkbox' name='rememberMe')
          label(for='rememberMe') Remember me
      //- .forgot
        a(href='/auth/forgotPassword') Qu&ecirc;n m&#x1EAD;t kh&#x1EA9;u?
      .form-button
        button.submit-login &Dstrok;&Abreve;NG NH&#x1EAC;P
      .signup
        span B&#x1EA1;n ch&#x1B0;a c&oacute; t&agrave;i kho&#x1EA3;n?
        a(href='/auth/signup') &Dstrok;&Abreve;NG K&Yacute;
script(src='/bootstrap/js/bootstrap.bundle.js')
script(type='module' src='/js/layout/script.js')