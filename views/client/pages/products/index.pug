extends ../../layouts/default.pug
include ../../mixins/wall.pug
include ../../mixins/product-item.pug
include ../../mixins/product-layout.pug
include ../../mixins/pagination.pug

block style
  link(rel="stylesheet", href="/css/products.css")

block main 
  +wall('Sản phẩm', "Chúng tôi tự hào giới thiệu những sản phẩm nội thất chất lượng cao, từ sofa êm ái đến bàn ăn sang trọng và nhiều hơn nữa.", false)

  .main-content.container-xxl
    .main-grid
      .main
        .head-main
          .categories
            .box
              .category(class = `${categorySlug ? '' : 'active'}`)
                a.sub-content-dark(href=`/products`) Tất cả
              each category in productCategories
                .category(class = `${categorySlug === category.slug ? 'active' : ''}`)
                  a.sub-content-dark(href=`/products/${category.slug}`) #{category.title}
        +product-grid(products)
        .pagination
          +pagination(paginationObject)
      .aside
        .search-input
          form(action='#' method='get')
            input(type='text' placeholder='Nhập từ khoá' name='searchKeyWord')
            button
              a.search-button
                img(src='/img/logo/search.svg' alt='' style='width: 24px; padding: 0')
        .filter
          h4.section-title
            | Sắp xếp
          ul
            li
              a.sub-content-dark(href='#') Giá tăng dần
            li
              a.sub-content-dark(href='#') Giá giảm dần
            li
              a.sub-content-dark(href='#') Xu hướng
            li
              a.sub-content-dark(href='#') Sản phẩm mới
        .filter
          h4.section-title
            | Khoảng giá
          ul
            li
              a.sub-content-dark(href='#') Dưới 1 triệu
            li
              a.sub-content-dark(href='#') 1 - 3 triệu
            li
              a.sub-content-dark(href='#') 3 - 5 triệu
            li
              a.sub-content-dark(href='#') 5 - 10 triệu
            li
              a.sub-content-dark(href='#') Trên 10 triệu